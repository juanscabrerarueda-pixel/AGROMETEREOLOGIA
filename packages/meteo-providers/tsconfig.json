{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@pkg/core": ["../core/dist/index.d.ts"],
      "@pkg/core/*": ["../core/dist/*"],
      "@pkg/core/schemas": ["../core/dist/schemas.d.ts"],
      "@pkg/core/schemas.js": ["../core/dist/schemas.js"],
      "@pkg/core/schemas/*": ["../core/dist/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["dist"]
}
